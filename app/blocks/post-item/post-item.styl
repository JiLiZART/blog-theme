.post-item
	display block

	&__header
		margin-bottom 1rem

	&__title
		margin 0
		font-weight 600
		font-size 2.625rem
		line-height 1.27

		+mobile()
			font-size 1.625rem

	&__title-link
		text-decoration none
		border-bottom 1px solid rgba(black, .3)

		&:hover
			border-bottom-color rgba(252, 99, 65, 0.3)

	&__title
	&__title-link
		color black
		transition color .2s ease-out, border .2s ease-out

		&:hover
			color #FF3824
			text-decoration none

	&__footer
		display flex

	&__comments
		margin-left auto

	&__comments-link
		color #333
		font-size 0.875rem
		border-bottom 1px solid rgba(#333, .3)

		&:hover
			color black
			border-bottom-color rgba(black, .2)

.post-item
	display block

	&__header
		margin-bottom 1rem

	&__title
		margin 0
		font-weight 600

	&__title-link
		text-decoration none
		border-bottom 1px solid transparent

		&:hover
			border-bottom-color rgba(black, .2)

	&__title
	&__title-link
		color black
		transition color .2s ease-out, border .2s ease-out

		&:hover
			color rgba(black, .5)
			text-decoration none

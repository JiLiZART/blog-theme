.comments
	display block
	padding-top 1.5rem
	padding-bottom 1.5rem
	border-top 1px solid darken(#f5f6f7, 10%)
	background-color #f5f6f7

	&__header
		display flex
		align-items center

	&__title
		margin 0
		margin-right 1rem
		font-size 1.5rem

	&__feed
	&__email
		margin-right 1rem
		font-size 1.5rem
		height 1.5rem
		text-decoration none
		color rgba(black, .7)

		&-icon
			font-size inherit
